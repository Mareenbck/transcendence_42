// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id			Int			@id @default(autoincrement())
	createdAt	DateTime	@default(now())

	email		String
	hash		String
	username	String
	status		UserStatus	@default(ONLINE)
}

enum UserStatus {
	ONLINE
	OFFLINE
	PLAYING
}
